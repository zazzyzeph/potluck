html
  include ./partials/head.jade
  body
    div(ng-app='validationApp', ng-controller='mainController')
      .container
        .row
          .col-sm-6
            // FORM ============
            form(name='userForm', ng-submit='submitForm()', novalidate='')
              // NAME
              .form-group(ng-class="{ 'has-error' : userForm.name.$invalid && !userForm.name.$pristine }")
                label Name
                input.form-control(type='text', name='name', ng-model='user.name', required='')
                p.help-block(ng-show='userForm.name.$invalid && !userForm.name.$pristine') You name is required.
              // USERNAME
              .form-group(ng-class="{ 'has-error' : userForm.username.$invalid && !userForm.username.$pristine }")
                label Username
                input.form-control(type='text', name='username', ng-model='user.username', ng-minlength='3', ng-maxlength='8')
                p.help-block(ng-show='userForm.username.$error.minlength') Username is too short.
                p.help-block(ng-show='userForm.username.$error.maxlength') Username is too long.
              // EMAIL
              .form-group(ng-class="{ 'has-error' : userForm.email.$invalid && !userForm.email.$pristine }")
                label Email
                input.form-control(type='email', name='email', ng-model='user.email')
                p.help-block(ng-show='userForm.email.$invalid && !userForm.email.$pristine') Enter a valid email.
              button.btn.btn-primary(type='submit', ng-disabled='userForm.$invalid') Submit
          .col-sm-6
            // VALIDATION TABLES ========
            .row
              .col-xs-3
                h3 Form
                table.table.table-bordered
                  tbody
                    tr
                      td(ng-class='{ success: userForm.$valid, danger: userForm.$invalid }') Valid
                    tr
                      td(ng-class='{ success: userForm.$pristine, danger: !userForm.$pristine }') Pristine
                    tr
                      td(ng-class='{ success: userForm.$dirty }') Dirty
              .col-xs-3
                h3 Name
                table.table.table-bordered
                  tbody
                    tr
                      td(ng-class='{ success: userForm.name.$valid, danger: userForm.name.$invalid }') Valid
                    tr
                      td(ng-class='{ success: userForm.name.$pristine, danger: !userForm.name.$pristine }') Pristine
                    tr
                      td(ng-class='{ success: userForm.name.$dirty }') Dirty
                    tr
                      td(ng-class='{ success: userForm.name.$touched }') Touched
              .col-xs-3
                h3 Username
                table.table.table-bordered
                  tbody
                    tr
                      td(ng-class='{ success: userForm.username.$valid, danger: userForm.username.$invalid }') Valid
                    tr
                      td(ng-class='{ success: userForm.username.$pristine, danger: !userForm.username.$pristine }') Pristine
                    tr
                      td(ng-class='{ success: userForm.username.$dirty }') Dirty
                    tr
                      td(ng-class='{ success: userForm.username.$touched }') Touched
              .col-xs-3
                h3 Email
                table.table.table-bordered
                  tbody
                    tr
                      td(ng-class='{ success: userForm.email.$valid, danger: userForm.email.$invalid }') Valid
                    tr
                      td(ng-class='{ success: userForm.email.$pristine, danger: !userForm.email.$pristine }') Pristine
                    tr
                      td(ng-class='{ success: userForm.email.$dirty }') Dirty
                    tr
                      td(ng-class='{ success: userForm.email.$touched }') Touched
